    <h2>会員情報編集</h2>
    <%= form_with model:@customer,url:public_customer_path(@customer),method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :"氏名" %>
        <%= f.text_field :last_name, class: "form-control name" %>
        <%= f.text_field :first_name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :"フリガナ" %>
        <%= f.text_field :kana_last_name, class: "form-control name" %>
        <%= f.text_field :kana_first_name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :"郵便番号" %>
        <%= f.text_field :post_code, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :"住所" %>
        <%= f.text_field :address, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :"電話番号" %>
        <%= f.text_field :telephone_number, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :"メールアドレス" %>
        <%= f.text_field :email, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.submit "編集内容を保存",class: "btn btn-success" %>
      </div>
    <% end %>
    <%= link_to "退会する", unsubscribe_public_customer_path, class: "btn btn-danger" %>
    
    
    
    
    