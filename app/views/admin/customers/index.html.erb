<h3 class="title mb-4">会員一覧</h3>

<div class="table-container mb-4">
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |c| %>
        <tr>
          <td><%= c.id %></td>
          <td><%= link_to c.last_name + " " + c.first_name, admin_customer_path(c), class: "text-decoration-none" %></td>
          <td><%= c.email %></td>
          <td><%= c.is_active ? "有効" : "退会" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
