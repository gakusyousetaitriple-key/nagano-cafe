<div class="container mt-4">
  <!-- タイトル -->
  <div class="d-inline-block bg-light px-3 py-2 mb-4">
    <h3 style="margin: 0;">注文履歴一覧</h3>
  </div>

  <!-- 注文履歴テーブル -->
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          <td><%= link_to order.customer.name, admin_order_admin_customer_path(order.customer.id) %></td>
          <td><%= order.order_details.sum(:quantity) %></td>
          <td><%= order.is_order_i18n %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- ページネーション -->
  <div class="d-flex justify-content-center">
    <%= paginate @orders %>
  </div>
</div>
