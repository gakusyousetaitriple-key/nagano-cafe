<h3><%= @customer.last_name + " " + @customer.first_name + "さんの会員情報編集" %></h3>
<%= form_with model:@customer,url:admin_customer_path(@customer),method: :patch do |f| %>
<table class="table">
  <tr>
    <td><%= "会員ID" %></td>
    <td><%= @customer.id %></td>
  </tr>
    <tr>
      <td><%= f.label :"氏名" %></td>
      <td><%= f.text_field :last_name, class: "form-control name" %></td>
      <td><%= f.text_field :first_name, class: "form-control name" %></td>
    </tr>
    <tr>
      <td><%= f.label :"フリガナ" %></td>
      <td><%= f.text_field :kana_last_name, class: "form-control name" %></td>
      <td><%= f.text_field :kana_first_name, class: "form-control name" %></td>
    </tr>
    <tr>
      <td><%= f.label :"郵便番号" %></td>
      <td><%= f.text_field :post_code, class: "form-control name" %></td>
    </tr>
    <tr>
      <td><%= f.label :"住所" %></td>
      <td><%= f.text_field :address, class: "form-control name" %></td>
    </tr>
    <tr>
      <td><%= f.label :"電話番号" %></td>
      <td><%= f.text_field :telephone_number, class: "form-control name" %></td>
    </tr>
    <tr>
      <td><%= f.label :"メールアドレス" %></td>
      <td><%= f.text_field :email, class: "form-control name" %></td>
    </tr>
    <tr>
      <td><%= f.label :"会員ステータス" %></td>
      <td>
        <%= f.radio_button :is_active, "true" %>
        <%= f.label :is_active, "有効" %>
      </td>
      <td>
        <%= f.radio_button :is_active, "false" %>
        <%= f.label :is_active, "退会" %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit "編集内容を保存",class: "btn btn-success" %></td>
    </tr>
</table>
<% end %>