<div class="container mt-4 mb-4">
  <!-- タイトル -->
  <div class="d-inline-block bg-light px-3 py-2 mb-4">
    <h4 style="margin: 0;">会員情報編集</h4>
  </div>

  <!-- 編集フォーム -->
  <%= form_with model: @customer, url: public_customer_path(@customer), method: :patch do |f| %>
    <div class="row mb-3">
      <div class="col-md-3 text-end">
        <%= f.label :last_name, "氏名", class: "form-label" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3 text-end">
        <%= f.label :kana_last_name, "フリガナ", class: "form-label" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :kana_last_name, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :kana_first_name, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3 text-end">
        <%= f.label :post_code, "郵便番号", class: "form-label" %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :post_code, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3 text-end">
        <%= f.label :address, "住所", class: "form-label" %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3 text-end">
        <%= f.label :telephone_number, "電話番号", class: "form-label" %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :telephone_number, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3 text-end">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <!-- ボタン部分 -->
    <div class="row mb-3">
      <div class="col-md-3"></div>
      <div class="col-md-3">
        <%= f.submit "編集内容を保存", class: "btn btn-success w-100" %>
      </div>
      <div class="col-md-3">
        <%= link_to "退会する", unsubscribe_public_customer_path, class: "btn btn-danger w-100" %>
      </div>
    </div>
  <% end %>
</div>
