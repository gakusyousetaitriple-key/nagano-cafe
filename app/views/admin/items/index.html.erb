<div class="header-container">
  <h1 class="page-title">商品一覧</h1> <!-- 商品一覧タイトルを下に移動 -->
  
  <!-- 新規商品登録ボタンを右上に配置 -->
  <div class="add-item-button">
    <%= link_to '+', new_admin_item_path, class: "add-item-link" %>
  </div>
</div>

<% if @items && @items.present? %>
  <!-- テーブル全体を上に移動 -->
  <table class="product-table">
    <thead>
      <tr class="table-header">
        <th class="table-cell">商品ID</th>
        <th class="table-cell">商品名</th>
        <th class="table-cell">税抜価格</th>
        <th class="table-cell">ジャンル</th>
        <th class="table-cell">ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td class="table-cell"><%= item.id %></td> <!-- 商品ID -->
          <td class="table-cell"><%= link_to item.name, admin_item_path(item) %></td> <!-- 商品名 -->
          <td class="table-cell"><%= item.price %></td> <!-- 税抜価格 -->
          <td class="table-cell"><%= item.genre ? item.genre.name : '未設定' %></td> <!-- ジャンル -->
          <td class="table-cell">
            <% if item.is_active %>
              <span class="active-status">販売中</span>
            <% else %>
              <span class="inactive-status">販売停止中</span>
            <% end %>
          </td> <!-- ステータス -->
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- ページネーションのリンクを中央寄せ -->
  <div class="pagination-container">
    <%= paginate @items %>
  </div>
<% else %>
  <p class="no-items-message">商品がありません。</p>
<% end %>
