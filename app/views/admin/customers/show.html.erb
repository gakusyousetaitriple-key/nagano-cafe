<h3 class="title mb-4"><%= @customer.last_name + " " + @customer.first_name + "さんの会員詳細" %></h3>

<div class="table-container mb-4">
  <table class="table table-striped table-bordered">
    <tbody>
      <tr>
        <td><strong>会員ID</strong></td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td><strong>氏名</strong></td>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <td><strong>フリガナ</strong></td>
        <td><%= @customer.kana_last_name %> <%= @customer.kana_first_name %></td>
      </tr>
      <tr>
        <td><strong>郵便番号</strong></td>
        <td><%= @customer.post_code %></td>
      </tr>
      <tr>
        <td><strong>住所</strong></td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td><strong>電話番号</strong></td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td><strong>メールアドレス</strong></td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td><strong>会員ステータス</strong></td>
        <td><%= @customer.is_active ? "有効" : "退会" %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="d-flex justify-content-center">
  <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success btn-lg" %>
</div>
