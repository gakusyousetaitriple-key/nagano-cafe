<div class="container mt-5">
  <h1 class="text-center mb-4">ジャンル編集</h1>

  <div class="d-flex justify-content-center">
    <div class="card p-4 shadow" style="width: 400px;">
      <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :name, "ジャンル名", class: "form-label" %>
          <%= f.text_field :name, value: @genre.name, class: "form-control" %>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.submit "更新する", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-3">
    <%= link_to '一覧に戻る', admin_genres_path, class: "btn btn-secondary" %>
  </div>
</div>
