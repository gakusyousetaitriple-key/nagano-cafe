<h1>配送先編集</h1>

<%= form_with model: @address, url: public_address_path(@address), method: :patch, local: true do |f| %>
  <div>
    <%= f.label :name, '名前' %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :post_code, '郵便番号' %>
    <%= f.text_field :post_code %>
  </div>
  <div>
    <%= f.label :address, '住所' %>
    <%= f.text_field :address %>
  </div>
  <%= f.submit '更新する' %>
<% end %>

<%= link_to '一覧に戻る', public_addresses_path %>

