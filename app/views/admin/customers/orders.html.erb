<h1>注文履歴</h1>

<h2>顧客: <%= @customer.name + "さんの注文履歴" %></h2>
<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          <td><%= order.order_details.sum(:quantity) %></td>
          <td><%= link_to order.is_order_i18n, admin_order_path(order.customer.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
