<div class="container mt-5 order-detail-page">
  <h1 class="mb-4">注文履歴詳細</h1>

  <!-- 注文情報と請求情報 -->
  <div class="d-flex" style="gap: 20px;">

    <!-- 注文情報 -->
    <div class="order-items" style="flex: 7;">
    <h4>注文情報</h4>
    <table class="table table-bordered">
    <tbody>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime("%Y年%m月%d日") %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @order.post_code %> <%= @order.address %></td>
      </tr>
      <tr>
        <th>宛名</th>
        <td><%= @order.name %></td>
      </tr>
      <tr>
        <th>支払い方法</th>
        <td><%= I18n.t("enums.order.payment_method.#{@order.payment_method}") %></td>
      </tr>
      <tr>
        <th>注文状況</th>
        <td><%= I18n.t("enums.order.is_order.#{@order.is_order}") %></td>
      </tr>
    </tbody>
  </table>

  </div>

    
    <!-- 請求情報 -->
    <div class="order-summary" style="flex: 3;">
      <h4>請求情報</h4>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= number_to_currency(@order.total_amount, unit: "¥") %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= number_to_currency(@order.postage, unit: "¥") %></td>
          </tr>
          <tr>
            <th>ご請求金額</th>
            <td><%= number_to_currency(@order.total_amount + @order.postage, unit: "¥") %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- 注文内容 -->
  <h4>注文内容</h4>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= number_to_currency(order_detail.price, unit: "円") %></td>
          <td><%= order_detail.quantity %></td>
          <td><%= number_to_currency(order_detail.price * order_detail.quantity, unit: "円") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
