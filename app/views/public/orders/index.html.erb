<div class="container mt-5">
  <h1 class="mb-4">注文履歴一覧</h1>

  <table class="table table-striped table-bordered order-history-table">
    <thead class="table-light">
      <tr>
        <th>注文日</th>
        <th>配達先</th>
        <th>支払金額</th>
        <th>注文状況</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime("%Y年%m月%d日") %></td>
          <td><%= order.address %></td>
          <td><%= number_to_currency(order.total_amount + order.postage, unit: "円") %></td>
          <td><%= I18n.t("enums.order.is_order.#{order.is_order}") %></td>
          <td>
            <%= link_to "詳細を見る", public_order_path(order), class: "btn btn-primary btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
