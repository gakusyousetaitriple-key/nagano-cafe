<div class="container">
<h1>ショッピングカート</h1>

<% if @cart_items.present? %>
<div class="d-flex justify-content-end">
  <%= button_to 'カートを空にする', destroy_all_public_cart_items_path, method: :delete, data: { confirm: 'カート内の商品を全て削除してもよろしいですか？' }, class: 'btn btn-danger' %>
</div>
<% end %>

<% if @cart_items.present? %>
  <div class="container cart-page">
    <div class="table-responsive">
      <table class="table table-bordered table-striped >
        <thead class="thead-dark">
          <tr>
            <th class="th-item-image">商品画像</th>
            <th class="th-item-name">商品名</th>
            <th class="th-price">価格</th>
            <th class="th-quantity">数量</th>
            <th class="th-subtotal">小計</th>
            <th class="th-actions"></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= image_tag cart_item.item.image, alt: cart_item.item.name, class: "cart-item-image" %></td>
              <td><%= cart_item.item.name %></td>
              <td><%= number_to_currency(cart_item.item.price) %></td>
              <td>
                <%= form_with model: cart_item, url: public_cart_item_path(cart_item), method: :patch, local: true do |f| %>
                  <div class="d-flex">
                    <%= f.number_field :amount, value: cart_item.amount, min: 1, class: 'form-control cart-amount-input' %>
                    <%= f.submit '変更', class: 'btn btn-success ms-2' %>
                  </div>
                <% end %>
              </td>
              <td><%= number_to_currency(cart_item.item.price * cart_item.amount) %></td>
              <td>
                <%= button_to '削除', public_cart_item_path(cart_item), method: :delete, data: { confirm: '削除してもよろしいですか？' }, class: 'btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="d-flex justify-content-between mt-3">
      <%= link_to '買い物を続ける', public_items_path, class: 'btn btn-primary' %>
      <p class="h5">カート全体の合計金額: 
        <span class="total-amount"><%= number_to_currency(@cart_items.sum { |item| item.item.price * item.amount }) %></span>
      </p>
    </div>

    <div class="d-flex justify-content-center mt-3">
      <%= link_to '情報入力に進む', new_public_order_path, class: 'btn btn-success' %>
    </div>

  </div>

<% else %>
  <div class="container cart-page">
      <div class="card text-center w-100 ">
        <div class="card-body ">
          <h5 class="card-title display-6 text-muted">カートに商品はありません。</h5>
          <%= link_to '商品一覧', public_items_path, class: 'btn btn-primary' %>
        </div>
      </div>
  </div>
<% end %>
</div>