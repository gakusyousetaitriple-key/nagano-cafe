<h1>カート</h1>

<% if @cart_items.present? %>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>価格</th>
        <th>数量</th>
        <th>合計金額</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= number_to_currency(cart_item.item.price) %></td>
          <td>
            <%= form_with model: cart_item, url: public_cart_item_path(cart_item), method: :patch, local: true do |f| %>
              <%= f.number_field :amount, value: cart_item.amount, min: 1 %>
              <%= f.submit '更新' %>
            <% end %>
          </td>
          <td><%= number_to_currency(cart_item.item.price * cart_item.amount) %></td>
          <td>
          <%= button_to '削除', public_cart_item_path(cart_item), method: :delete, data: { confirm: '削除してもよろしいですか？' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= link_to '注文へ進む', public_orders_path %>
  </div>
  <!-- カート内全てを削除するリンク -->
  <div>
    <%= button_to 'カートを空にする', destroy_all_public_cart_items_path, method: :delete, data: { confirm: 'カート内の商品を全て削除してもよろしいですか？' }, class: 'btn btn-danger' %>
  </div>
<% else %>
  <p>カートに商品はありません。</p>
<% end %>
